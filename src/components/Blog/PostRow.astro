---
import { formatDate } from "../../lib/helpers";

interface Props {
  title: string;
  date: Date;
  url: string;
}

const { title, date, url } = Astro.props;
---

<li class="w-full text-neutral-100 hover:text-neutral-400 ease-in-out transition-colors my-2">
  <a
    class="text-sm md:text-base decoration-none flex justify-between flex-col md:flex-row"
    href={`/posts/${url}`}
  >
    <p class="inline-block">
      {title}
    </p>
    <time
      class="tabular-nums text-left md:text-right"
      datetime={date.toISOString()}
      data-date={date.toISOString()}
    >
      {formatDate(date)}
    </time>
  </a>
</li>
